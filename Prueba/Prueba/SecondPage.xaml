<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prueba.SecondPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="PaleVioletRed" >
            <Label Text="{Binding nombre}" TextColor="White" FontSize="Large"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" x:Name="lbnombre"/>

            <Label Text="{Binding edad}" TextColor="White" FontSize="Large"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" x:Name="lbedad"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>